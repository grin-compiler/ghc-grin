// "getSpark#" :: {"State#" %s} -> {"GHC.Prim.(#,#)" T_Int64 %a}
USED("PrimOp-Parallelism-03")
Called(r, op),
TypeVarPointsTo(r, ty_node, item) :-
  op = "getSpark#",
  REACHABLE(r)
  Call(r, op, _),
  // lookup items
  Spark(item),
  // lookup result node
  RetTup(op, "GHC.Prim.(#,#)", 1, ty_node).

