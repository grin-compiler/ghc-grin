Error(r, cat("Unsupported (reachable) primop: ", op)) :-
  ( op = "par#"
  ; op = "spark#"
  ; op = "seq#"
  ; op = "getSpark#"
  ),
  REACHABLE(r)
  Call(r, op, _).
