#if 0
.decl Spark(item:Variable)
.output Spark

// "par#" :: %a -> T_Int64
USED("PrimOp-Parallelism-01")
Called(r, "par#"),
Spark(item) :-
  REACHABLE(r)
  Call(r, "par#", _),
  // value
  CallArgument(r, 0, item).

// "spark#" :: %a -> {"State#" %s} -> {"GHC.Prim.Unit#" %a}
USED("PrimOp-Parallelism-02")
Called(r, op),
TypeVarPointsTo(r, ty_node, item),
Spark(item) :-
  REACHABLE(r)
  op = "spark#",
  Call(r, op, _),
  // value
  CallArgument(r, 0, item),
  // extract result node
  RetTup1Node0(op, ty_node).

